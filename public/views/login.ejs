<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <!-- Formulario de ingreso de productos -->
    <div class="container bg-light p-5 m-5 border border-primary rounded">

        <h1 class="text-primary mb-5">Login de Usuario</h1>

        <form onsubmit="event.preventDefault(); loginUsuario()">
            <div class="mb-3">
                <label for="nombre"><b>Ingrese su nombre</b></label>
                <input id="nombre" class="form-control" type="text" name="nombre">
                <div class="text-danger" id="nombreError"></div>
            </div>
            <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>

        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span>Ingresar con Facebook</a>

    </div>

   

    <script src="../js/ejs.min.js"></script>
    <script src="../js/login.js"></script>
</body>
</html>